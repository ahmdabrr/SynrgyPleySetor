<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp">

    <ImageView
        android:id="@+id/ivImgAppSetor"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:elevation="4dp"
        android:outlineSpotShadowColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNamaApp"
        app:layout_constraintTop_toBottomOf="@id/ivImgAppSetor"
        app:layout_constraintStart_toStartOf="@id/ivImgAppSetor"
        app:layout_constraintEnd_toEndOf="@id/ivImgAppSetor"
        android:layout_marginTop="2dp"
        android:text="Nama Aplikasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvSizeApp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaApp"
        app:layout_constraintStart_toStartOf="@id/tvNamaApp"
        android:text="10 MB"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
